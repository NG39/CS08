enum Role {
  Admin
	Normal
  Restricted
}

enum Level {
  First
  Second
  Third
  Fourth
  Fifth
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique  
  password: String!
  role: Role!
}

type Post {
	id: ID! @id
	text: String! @default(value: "")
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
	postedBy: User! @relation(link: INLINE)
  guid: Int!
}

type Course {
  id: ID! @id
  level: Level
  courseID: String!
  name: String
  info: String @default(value: "")
}

type CourseRun { 
  id: ID! @id
  course: Course! @relation(link: INLINE)
  year: [Int!]!
}

type CourseDegreeWeight {
  id: ID! @id
  course: Course! @relation(link: INLINE)
  degree: Degree! @relation(link: INLINE)
  weight: Float!
}

type StudentCourseGrade {
  id: ID! @id
  course: Course! @relation(link: INLINE)
  student: Student! @relation(link: INLINE)
  weight: Float!
  grade: Float!
  date: Int!
}

type Student {
  id: ID! @id
  firstname: String!
  surname: String!
  guid: String! @unique
  degree: Degree! @relation(link: INLINE)
  level: Level!
  entryYear: Int!
}

 type Degree {
   id: ID! @id
   degreeCode: String!
   name: String!
   info: String! @default(value: "")
   courses: [Course!]! @relation(link: INLINE, name: "DegreeCourseRelation")
   courseDegreeWeights: [CourseDegreeWeight!]!
 }

type OverallGrade {
  id: ID! @id
  student: Student! @relation(link: INLINE)
  year: Int!
  studentLevel: Level!
  grade: Float!
}
