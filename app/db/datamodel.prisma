enum Role {
  Admin
	Normal
}

enum Year {
  First 
  Second
  Third
  Fourth
  Fifth
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  role: Role!
}

type Post {
	id: ID! @id
	text: String! @default(value: "")
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
	postedBy: User! @relation(link: INLINE)
}

type Course {
  id: ID! @id
  courseID: String!
  weight: Float!
  level: Year!
}
type CourseRun { 
  id: ID! @id
  course: Course! @relation(link: INLINE)
  year: Int!
}

type StudentCourseGrade {
  id: ID! @id
  course: Course! @relation(link: INLINE)
  student: Student! @relation(link: INLINE)
  weight: Float!
  grade: Float!
  createdAt: DateTime! @createdAt
}

type Student {
  id: ID! @id
  firstname: String!
  surname: String!
  guid: String!
  degreeCode: String!
  year: Year!
   
}