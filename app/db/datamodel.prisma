enum Role {
  Admin
	Normal
  Restricted
}

enum Year {
  First 
  Second
  Third
  Fourth
  Fifth
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  role: Role!
}

type Post {
	id: ID! @id
	text: String! @default(value: "")
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
	postedBy: User! @relation(link: INLINE)
}

type Course {
  id: ID! @id
  level: Year!
  courseID: String!
  name: String!
  info: String! @default(value: "")
}

type CourseRun { 
  id: ID! @id
  course: Course! @relation(link: INLINE)
  year: Int!
}

type StudentCourseGrade {
  id: ID! @id
  course: Course! @relation(link: INLINE)
  student: Student! @relation(link: INLINE)
  weight: Float!
  grade: Float!
  createdAt: DateTime! @createdAt

}

type Student {
  id: ID! @id
  firstname: String!
  surname: String!
  guid: String!
  degreeID: Degree! @relation(link: INLINE)
  year: Year!
   
}
 type Degree {
   id: ID! @id
   degreeCode: String!
   name: String!
   info: String! @default(value: "")

 }
type CourseDegreeWeight {
  id: ID! @id
  course: Course! @relation(link: INLINE)
  degree: Degree! @relation(link: INLINE)
  weight: Float!
}
type OverallGrade {
  id: ID! @id
  student: Student! @relation(link: INLINE)
  year: Int!
  studentLevel: Year!
  grade: Float!
}
